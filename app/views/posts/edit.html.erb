<h1>Edit this Post</h1>

<% if @post.errors.any?%>
	<% @post.errors.full_messages.each do |error|%>
		<p class="text-danger">
			<%= error %>
		</p>
	<% end %>
<% end %>


<%= form_for @post do |p| %>

<p>
	<%= p.label :title %>
	<%= p.text_field :title %>
</p>
<p>
	<%= p.label :category %>
	<%= p.text_field :category %>
</p>
<p>
	<%= p.label :body %>
	<%= p.text_area :body %>
</p>
<p>
	<%= p.submit %>
</p>
<% end %>

<%= link_to "Delete Article", post_path(@post), method: "delete", data: { confirm: "Are you sure you want to delete this article?"} %>
